  script(src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js")

  script.
    gsap.set(".pen-outline path", {
      strokeDasharray: 500,
      strokeDashoffset: 500,
      transformOrigin: "50% 50%"
    });

    gsap.to(".pen-outline path", {
      strokeDashoffset: 0,
      duration: 1.6,
      ease: "power1.inOut",
      repeat: -1,
      yoyo: true
    });

  script.
    document.querySelectorAll(".hover-oval").forEach(function (wrap) {
      const path = wrap.querySelector(".hover-oval__path");
      const text = wrap.querySelector(".hover-oval__text");

      if (!path) return;

      const length = path.getTotalLength();

      gsap.set(path, {
        strokeDasharray: length,
        strokeDashoffset: length
      });

      const tl = gsap.timeline({ paused: true });

      tl.to(path, {
        strokeDashoffset: 0,
        duration: 2,
        ease: "power2.out"
      });

      wrap.addEventListener("mouseenter", function () {
        tl.play();
        gsap.to(text, { scale: 1.05, duration: 0.2 });
      });

      wrap.addEventListener("mouseleave", function () {
        tl.reverse();
        gsap.to(text, { scale: 1, duration: 0.2 });
      });
    });
