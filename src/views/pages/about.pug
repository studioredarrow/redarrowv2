    script.
        document.querySelectorAll(".hero-oval").forEach((wrap) => {
          const path = wrap.querySelector(".hero-oval__path");
          const text = wrap.querySelector(".hero-oval__text");

          if (!path) return;

          const length = path.getTotalLength();

          gsap.set(path, {
            strokeDasharray: length,
            strokeDashoffset: length
          });

          const tl = gsap.timeline({ paused: true });

          tl.to(path, {
            strokeDashoffset: 0,
            duration: 1.6,
            ease: "power2.out"
          });

          wrap.addEventListener("mouseenter", () => {
            tl.play();
            gsap.to(text, { scale: 1.05, duration: 0.2 });
          });

          wrap.addEventListener("mouseleave", () => {
            tl.reverse();
            gsap.to(text, { scale: 1, duration: 0.2 });
          });
        });      

    script.
      document.addEventListener("DOMContentLoaded", () => {
        document.querySelectorAll(".counter").forEach(counter => {
          const end = String(counter.dataset.end || "0");
          const start = String(counter.dataset.start || "0").padStart(end.length, "0");
          const suffix = counter.dataset.suffix || "";

          counter.innerHTML = "";

          end.split("").forEach((endDigit, index) => {
            const digit = document.createElement("div");
            digit.className = "digit";

            const inner = document.createElement("div");
            inner.className = "digit-inner";

            for (let i = 0; i <= 9; i++) {
              const span = document.createElement("span");
              span.textContent = i;
              inner.appendChild(span);
            }

            digit.appendChild(inner);
            counter.appendChild(digit);

            // wait for layout so height is correct
            requestAnimationFrame(() => {
              const digitHeight = inner.firstChild.offsetHeight;

              gsap.to(inner, {
                y: -digitHeight * Number(endDigit),
                duration: 1.4,
                ease: "power2.out",
                delay: index * 0.08 // subtle stagger, feels premium
              });
            });
          });

          if (suffix) {
            const s = document.createElement("span");
            s.className = "counter-suffix";
            s.textContent = suffix;
            counter.appendChild(s);
          }
        });
      });
